name: Issue Certificate

on:
  push:
    branches:
      - main  # Trigger on pushes to the main branch

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout code
      uses: actions/checkout@v3

    - name: Set up kubectl
      uses: kubectl-actions/setup-kubectl@v1  # Use the correct action for setting up kubectl
      with:
        version: 'v1.24.0'  # Specify the exact version if necessary

    - name: Issue Certificate
      run: |
        kubectl apply -f .github/workflows/certificate-issuer.yaml
